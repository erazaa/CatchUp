<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pe.edu.utp.catchup.activities.ArticleActivity"
    tools:showIn="@layout/activity_article">
    <com.androidnetworking.widget.ANImageView
        android:id="@+id/pictureANImageView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="8dp" />
    <ImageButton
        android:id="@+id/browserImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_open_in_browser_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pictureANImageView"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/browserImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:text="Sample Title"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="Sample Description"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
